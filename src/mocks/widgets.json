    "name": "Value stepper",
    "descriptor": {
      "type": "rpc",
      "sizeX": 3.5,
      "sizeY": 2,
      "resources": [],
      "templateHtml": "<div class=\"tb-card stepper-card\"><div class=\"value\">{{value}} {{units}}</div><div class=\"actions\"><button class=\"tb-btn\" data-action-id=\"decrement\">-</button><button class=\"tb-btn\" data-action-id=\"increment\">+</button></div></div>",
      "templateCss": ".stepper-card{display:flex;flex-direction:column;gap:12px;justify-content:center;align-items:center;height:100%;padding:12px;border:1px solid #e0e0e0;border-radius:10px;} .value{font-size:22px;font-weight:700;} .actions{display:flex;gap:10px;} .tb-btn{width:44px;height:36px;border:none;border-radius:8px;background:#00695c;color:#fff;font-weight:700;font-size:18px;cursor:pointer;box-shadow:0 3px 8px rgba(0,0,0,0.12);} .tb-btn:hover{background:#00897b;} .tb-btn:active{transform:translateY(1px);}",
      "controllerScript": "self.units = ctx.settings.units || ''; self.value = ctx.settings.initialValue ?? 0; self.increment = function(){ self.value = (self.value || 0) + (ctx.settings.step || 1); if(ctx.actionsApi && ctx.actionsApi.increment){ ctx.actionsApi.increment(self.value); } }; self.decrement = function(){ self.value = (self.value || 0) - (ctx.settings.step || 1); if(ctx.actionsApi && ctx.actionsApi.decrement){ ctx.actionsApi.decrement(self.value); } };",
