      "hasBasicMode": true,
      "basicModeDirective": "",
      "defaultConfig": "{\"initialValue\":0,\"step\":1,\"units\":\"\",\"datasources\":[],\"actions\":{\"increment\":[{\"name\":\"inc\",\"type\":\"rpc\",\"method\":\"setState\"}],\"decrement\":[{\"name\":\"dec\",\"type\":\"rpc\",\"method\":\"setState\"}]}}"
    },
    "deprecated": false,
    "scada": false,
    "description": "Mock of ThingsBoard value stepper (buttons bundle)"
